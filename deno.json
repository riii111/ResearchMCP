{
  "tasks": {
    "start": "deno run --allow-net --allow-env main.ts",
    "dev": "deno run --watch --allow-net --allow-env main.ts",
    "test": "deno test --allow-net --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "singleQuote": false,
    "useTabs": false,
    "semiColons": true
  },
  "imports": {
    "hono": "npm:hono@4.1.2",
    "neverthrow": "npm:neverthrow@6.1.0"
  }
}